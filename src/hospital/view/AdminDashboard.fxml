<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="500" prefWidth="800"
            style="-fx-background-color: #f9fbfc;"
            xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/17.0.12"
            fx:controller="hospital.controller.AdminDashboardController">

    <!-- Top Bar -->
    <top>
        <HBox spacing="10" style="-fx-background-color: #1976d2;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="ðŸ¥ HealthSync Admin Dashboard"
                   style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>

            <Pane HBox.hgrow="ALWAYS" />

            <Button fx:id="btnLogout" text="Logout" onAction="#handleLogout"
                    style="-fx-background-color: white; -fx-text-fill: #1976d2; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <!-- Main Dashboard Buttons -->
    <center>
        <VBox alignment="CENTER" spacing="15">
            <Label text="Welcome, Admin!"
                   style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Label text="Select an option to continue:"
                   style="-fx-font-size: 14px;"/>

            <Button fx:id="btnManagePatients" text="Manage Patients"
                    onAction="#handleManagePatients"
                    style="-fx-background-color: #1976d2; -fx-text-fill: white;"/>

            <Button fx:id="btnManageEmployees" text="Manage Employees"
                    onAction="#handleManageEmployees"
                    style="-fx-background-color: #1976d2; -fx-text-fill: white;"/>

            <Button fx:id="btnManageRooms" text="Manage Rooms"
                    onAction="#handleManageRooms"
                    style="-fx-background-color: #1976d2; -fx-text-fill: white;"/>


            <Button fx:id="btnViewBills" text="Manage Bills"
                    onAction="#handleViewBills"
                    style="-fx-background-color: #1976d2; -fx-text-fill: white;"/>

            <Button fx:id="btnViewReports" text="View Reports"
                    onAction="#handleViewReports"
                    style="-fx-background-color: #1976d2; -fx-text-fill: white;"/>
        </VBox>
    </center>

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
</BorderPane>
