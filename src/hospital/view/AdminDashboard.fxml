<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="500" prefWidth="800" style="-fx-background-color: #f9fbfc;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="hospital.controller.AdminDashboardController">

    <!-- Top Menu / Header -->
    <top>
        <HBox spacing="10" style="-fx-background-color: #1976d2;">
            <!-- Padding using Insets -->
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>

            <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="🏥 HealthSync Admin Dashboard" />

            <Pane HBox.hgrow="ALWAYS" />

            <Button fx:id="btnLogout" onAction="#handleLogout" style="-fx-background-color: white; -fx-text-fill: #1976d2; -fx-font-weight: bold;" text="Logout" />
        </HBox>

    </top>

    <!-- Center Content -->
    <center>
        <VBox alignment="CENTER" spacing="20">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Welcome, Admin!" />
            <Label style="-fx-font-size: 14px;" text="This is your dashboard area." />
         <Button fx:id="btnManagePatients" onAction="#handleManagePatients" text="Manage Patients" />
         <Button fx:id="btnManageEmployees" onAction="#handleManageEmployees" text="Manage Employees" />
         <Button fx:id="btnManageRooms" onAction="#handleManageRooms" text="Manage Rooms" />
        </VBox>
    </center>

    <!-- Optional: Add padding around center content -->
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
</BorderPane>
