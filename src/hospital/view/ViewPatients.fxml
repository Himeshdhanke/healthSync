<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600" prefWidth="900"
            xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/17.0.12"
            fx:controller="hospital.controller.ViewPatientsController"
            style="-fx-background-color: #f9fbfc;">

    <!-- 🔷 Top Bar -->
    <top>
        <HBox spacing="10" style="-fx-background-color: #1976d2;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Label text="🏥 View Patients"
                   style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>

            <Pane HBox.hgrow="ALWAYS"/>

            <Button fx:id="btnBack" text="⬅ Back" onAction="#handleBack"
                    style="-fx-background-color: white; -fx-text-fill: #1976d2; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <!-- 🧍 Patients Table -->
    <center>
        <VBox alignment="CENTER" spacing="20" padding="20">
            <TableView fx:id="tblPatients" prefWidth="850" prefHeight="500">
                <columns>
                    <TableColumn fx:id="colId" text="Patient ID" prefWidth="100"/>
                    <TableColumn fx:id="colName" text="Name" prefWidth="200"/>
                    <TableColumn fx:id="colAge" text="Age" prefWidth="100"/>
                    <TableColumn fx:id="colGender" text="Gender" prefWidth="120"/>
                    <TableColumn fx:id="colDob" text="Date of Birth" prefWidth="150"/>
                    <TableColumn fx:id="colMobNo" text="Mobile No" prefWidth="180"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
</BorderPane>
