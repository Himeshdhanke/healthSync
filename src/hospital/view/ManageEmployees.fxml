<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="hospital.controller.ManageEmployeesController"
            prefWidth="950" prefHeight="600"
            style="-fx-background-color: #f7f9fb;">

    <!-- Top Bar -->
    <top>
        <HBox spacing="20" alignment="CENTER_LEFT" style="-fx-background-color: #3c6e71;">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>
            <Button text="← Back" onAction="#goBack"
                    style="-fx-background-color: white; -fx-text-fill: #3c6e71; -fx-font-weight: bold;"/>
            <Label text="Manage Employees"
                   style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <!-- Center Content -->
    <center>
        <VBox spacing="20">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>

            <!-- Scrollable Form and Buttons -->
            <ScrollPane fitToWidth="true" prefHeight="300">
                <VBox spacing="15">

                    <!-- Role Filter -->
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Filter by Role:"/>
                        <ComboBox fx:id="roleFilterCombo"/>
                    </HBox>

                    <!-- GridPane for Form Fields -->
                    <GridPane hgap="15" vgap="15">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="25"/>
                            <ColumnConstraints percentWidth="75"/>
                        </columnConstraints>

                        <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtName" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Role:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="cmbRole" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Department:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtDept" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Qualification:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtQualification" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                        <Label text="Salary:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtSalary" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                        <Label text="Sex:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtSex" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                        <Label text="Mobile:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtMobNo" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

                        <Label text="Address:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtAddress" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

                        <Label text="State:" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtState" GridPane.rowIndex="8" GridPane.columnIndex="1"/>

                        <Label text="City:" GridPane.rowIndex="9" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtCity" GridPane.rowIndex="9" GridPane.columnIndex="1"/>

                        <Label text="Pin:" GridPane.rowIndex="10" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtPinNo" GridPane.rowIndex="10" GridPane.columnIndex="1"/>
                    </GridPane>
                </VBox>
            </ScrollPane>
                    <!-- Buttons -->
                    <HBox spacing="15" alignment="CENTER_LEFT">
                        <Button fx:id="btnAdd" text="Add" onAction="#handleAdd"
                                style="-fx-background-color: #3c6e71; -fx-text-fill: white;"/>
                        <Button fx:id="btnUpdate" text="Update" onAction="#handleUpdate"
                                style="-fx-background-color: #3c6e71; -fx-text-fill: white;"/>
                        <Button fx:id="btnDelete" text="Delete" onAction="#handleDelete"
                                style="-fx-background-color: #d62828; -fx-text-fill: white;"/>
                        <Button fx:id="btnRefresh" text="Refresh" onAction="#handleRefresh"
                                style="-fx-background-color: #3c6e71; -fx-text-fill: white;"/>
                    </HBox>



            <!-- Employee Table -->
            <TableView fx:id="employeeTable" VBox.vgrow="ALWAYS" prefHeight="300">
                <columns>
                    <TableColumn fx:id="colEId" text="ID"/>
                    <TableColumn fx:id="colName" text="Name"/>
                    <TableColumn fx:id="colRole" text="Role"/>
                    <TableColumn fx:id="colDept" text="Department"/>
                    <TableColumn fx:id="colQualification" text="Qualification"/>
                    <TableColumn fx:id="colSalary" text="Salary"/>
                    <TableColumn fx:id="colSex" text="Sex"/>
                    <TableColumn fx:id="colMobNo" text="Mobile"/>
                    <TableColumn fx:id="colCity" text="City"/>
                </columns>
            </TableView>

        </VBox>
    </center>
</BorderPane>
