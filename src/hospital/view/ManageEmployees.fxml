<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="hospital.controller.ManageEmployeesController"
            prefWidth="1000" prefHeight="700">

    <VBox spacing="12" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
          AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
        <padding>
            <Insets top="12" right="12" bottom="12" left="12"/>
        </padding>

        <Label text="Manage Employees"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #333;" />

        <!-- Table Section -->
        <TableView fx:id="employeeTable" prefHeight="260">
            <columns>
                <TableColumn fx:id="colId" text="E_ID" prefWidth="70"/>
                <TableColumn fx:id="colName" text="Name" prefWidth="150"/>
                <TableColumn fx:id="colSalary" text="Salary" prefWidth="100"/>
                <TableColumn fx:id="colSex" text="Sex" prefWidth="80"/>
                <TableColumn fx:id="colMob" text="Mobile No" prefWidth="120"/>
                <TableColumn fx:id="colAddress" text="Address" prefWidth="180"/>
                <TableColumn fx:id="colState" text="State" prefWidth="100"/>
                <TableColumn fx:id="colCity" text="City" prefWidth="100"/>
                <TableColumn fx:id="colPin" text="PIN" prefWidth="80"/>
            </columns>
        </TableView>

        <!-- Form Section -->
        <GridPane hgap="16" vgap="10"
                  style="-fx-background-color: #fff; -fx-border-color: #e0e0e0; -fx-border-radius: 6; -fx-background-radius: 6;">
            <padding>
                <Insets top="14" right="14" bottom="14" left="14"/>
            </padding>

            <columnConstraints>
                <ColumnConstraints percentWidth="18"/>
                <ColumnConstraints percentWidth="32"/>
                <ColumnConstraints percentWidth="18"/>
                <ColumnConstraints percentWidth="32"/>
            </columnConstraints>

            <!-- Row 0 -->
            <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="txtName" GridPane.rowIndex="0" GridPane.columnIndex="1" promptText="Employee Name"/>
            <Label text="Salary:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
            <TextField fx:id="txtSalary" GridPane.rowIndex="0" GridPane.columnIndex="3" promptText="Salary"/>

            <!-- Row 1 -->
            <Label text="Sex:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="txtSex" GridPane.rowIndex="1" GridPane.columnIndex="1" promptText="M/F"/>
            <Label text="Mobile No:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
            <TextField fx:id="txtMobNo" GridPane.rowIndex="1" GridPane.columnIndex="3" promptText="Mobile Number"/>

            <!-- Row 2 -->
            <Label text="Address:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="txtAddress" GridPane.rowIndex="2" GridPane.columnIndex="1" promptText="Address"/>
            <Label text="State:" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
            <TextField fx:id="txtState" GridPane.rowIndex="2" GridPane.columnIndex="3" promptText="State"/>

            <!-- Row 3 -->
            <Label text="City:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="txtCity" GridPane.rowIndex="3" GridPane.columnIndex="1" promptText="City"/>
            <Label text="PIN:" GridPane.rowIndex="3" GridPane.columnIndex="2"/>
            <TextField fx:id="txtPin" GridPane.rowIndex="3" GridPane.columnIndex="3" promptText="PIN Code"/>
        </GridPane>

        <!-- Buttons -->
        <HBox spacing="12" alignment="CENTER_RIGHT">
            <padding>
                <Insets top="8" right="8" bottom="8" left="8"/>
            </padding>

            <Button fx:id="btnAdd" text="Add" onAction="#handleAdd"
                    style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Button fx:id="btnUpdate" text="Update" onAction="#handleUpdate"
                    style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Button fx:id="btnDelete" text="Delete" onAction="#handleDelete"
                    style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Button fx:id="btnClear" text="Clear" onAction="#clearFields"
                    style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>
    </VBox>
</AnchorPane>
