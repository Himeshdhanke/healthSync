<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="500" prefWidth="800"
            style="-fx-background-color: #f9fbfc;"
            xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/17.0.12"
            fx:controller="hospital.controller.ReceptionistDashboardController">

    <!-- Top Bar -->
    <top>
        <HBox spacing="10" style="-fx-background-color: #1976d2;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="🏥 HealthSync Receptionist Dashboard"
                   style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>

            <Pane HBox.hgrow="ALWAYS" />

            <Button fx:id="btnLogout" text="Logout" onAction="#handleLogout"
                    style="-fx-background-color: white; -fx-text-fill: #1976d2; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <!-- Center: Main Menu -->
    <center>
        <VBox alignment="CENTER" spacing="15">
            <Label text="Welcome, Receptionist!"
                   style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Label text="Please select an action:"
                   style="-fx-font-size: 14px;"/>

            <Button fx:id="btnAssignRoom" text="Assign Room"
                    onAction="#handleAssignRoom"
                    style="-fx-background-color: #1976d2; -fx-text-fill: white;"/>

            <Button fx:id="btnCreateBill" text="Manage Bills"
                    onAction="#handleCreateBill"
                    style="-fx-background-color: #1976d2; -fx-text-fill: white;"/>

            <Button fx:id="btnViewReports" text="Manage Reports"
                    onAction="#handleViewReports"
                    style="-fx-background-color: #1976d2; -fx-text-fill: white;"/>

            <Button fx:id="btnViewPatients" text="Manage Patients"
                    onAction="#handleViewPatients"
                    style="-fx-background-color: #1976d2; -fx-text-fill: white;"/>
        </VBox>
    </center>

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
</BorderPane>
