<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="hospital.controller.LoginController"
            prefWidth="400" prefHeight="300"
            style="-fx-background-color: #f7f9fb;">

    <VBox alignment="CENTER" spacing="15.0"
          layoutX="50" layoutY="40" prefWidth="300">
        <Label text="HealthSync Login"
               style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="txtUsername" promptText="Enter username"
                       GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <PasswordField fx:id="txtPassword" promptText="Enter password"
                           GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        </GridPane>

        <HBox alignment="CENTER" spacing="10">
            <Button text="Login" onAction="#handleLogin"/>
            <Button text="Reset" onAction="#handleReset"/>
        </HBox>

        <Label fx:id="lblStatus" textFill="red" style="-fx-font-size: 12px;"/>
    </VBox>
</AnchorPane>
