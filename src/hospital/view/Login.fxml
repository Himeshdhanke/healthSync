<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="hospital.controller.LoginController"
            prefWidth="1000" prefHeight="700"
            style="-fx-background-color: linear-gradient(to bottom right, #dce9f8, #f8fbff);">

    <!-- Center content -->
    <center>
        <VBox alignment="CENTER" spacing="18"
              prefWidth="420" prefHeight="360"
              style="-fx-background-color: white;
                     -fx-background-radius: 20;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 20, 0, 0, 10);">
            <padding>
                <Insets top="40" right="50" bottom="40" left="50"/>
            </padding>

            <!-- Title -->
            <VBox alignment="CENTER" spacing="6">
                <Label text="HealthSync Login"
                       style="-fx-font-size: 24px;
                              -fx-font-weight: bold;
                              -fx-text-fill: #1b3c73;"/>
                <Label text="Welcome back! Please sign in to continue."
                       style="-fx-font-size: 13px;
                              -fx-text-fill: #607d8b;"/>
            </VBox>

            <!-- Form -->
            <GridPane hgap="12" vgap="12" alignment="CENTER">
                <Label text="Username:"
                       style="-fx-font-size: 14px; -fx-text-fill: #2c3e50;"
                       GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtUsername" promptText="Enter username"
                           style="-fx-background-radius: 8;
                                  -fx-border-color: #cfd8dc;
                                  -fx-border-radius: 8;
                                  -fx-padding: 6 8;"
                           GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Password:"
                       style="-fx-font-size: 14px; -fx-text-fill: #2c3e50;"
                       GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <PasswordField fx:id="txtPassword" promptText="Enter password"
                               style="-fx-background-radius: 8;
                                      -fx-border-color: #cfd8dc;
                                      -fx-border-radius: 8;
                                      -fx-padding: 6 8;"
                               GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            </GridPane>

            <!-- Buttons -->
            <HBox alignment="CENTER" spacing="12">
                <Button fx:id="btnLogin" text="Login"
                        onAction="#handleLogin"
                        onMouseEntered="#handleMouseEnter"
                        onMouseExited="#handleMouseExit"
                        style="-fx-background-color: linear-gradient(to right, #2196f3, #42a5f5);
                               -fx-text-fill: white;
                               -fx-font-weight: bold;
                               -fx-background-radius: 10;
                               -fx-padding: 8 24;
                               -fx-cursor: hand;"/>

                <Button fx:id="btnReset" text="Reset"
                        onAction="#handleReset"
                        onMouseEntered="#handleMouseEnter"
                        onMouseExited="#handleMouseExit"
                        style="-fx-background-color: #eceff1;
                               -fx-text-fill: #263238;
                               -fx-background-radius: 10;
                               -fx-padding: 8 24;
                               -fx-cursor: hand;"/>
            </HBox>

            <!-- Status Label -->
            <Label fx:id="lblStatus"
                   style="-fx-font-size: 12px;"
                   textFill="red"/>
        </VBox>
    </center>

    <!-- Footer -->
    <bottom>
        <Label text="Â© 2025 HealthSync Hospital Management System"
               style="-fx-text-fill: #546e7a; -fx-font-size: 11px;"
               BorderPane.alignment="CENTER">
            <padding>
                <Insets top="10" bottom="10"/>
            </padding>
        </Label>
    </bottom>
</BorderPane>
