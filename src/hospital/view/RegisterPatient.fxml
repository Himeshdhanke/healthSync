<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600" prefWidth="800"
            xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/17.0.12"
            fx:controller="hospital.controller.RegisterPatientController"
            style="-fx-background-color: #f9fbfc;">

    <!-- 🔷 Top Bar -->
    <top>
        <HBox spacing="10" style="-fx-background-color: #1976d2;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Label text="🏥 Register New Patient"
                   style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>

            <Pane HBox.hgrow="ALWAYS"/>

            <Button fx:id="btnBack" text="⬅ Back" onAction="#handleBack"
                    style="-fx-background-color: white; -fx-text-fill: #1976d2; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <!-- 🧾 Patient Form -->
    <center>
        <VBox alignment="CENTER" spacing="20">
            <Label text="Enter Patient Details" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

            <GridPane hgap="15" vgap="15" alignment="CENTER">
                <Label text="Full Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtName" promptText="Enter full name"
                           GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="250"/>

                <Label text="Age:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtAge" promptText="Enter age"
                           GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Gender:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <ComboBox fx:id="cmbGender" prefWidth="250" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Date of Birth:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <DatePicker fx:id="dpDob" prefWidth="250" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Phone Number:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="txtPhone" promptText="Enter phone number"
                           GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            </GridPane>

            <Button fx:id="btnSave" text="Save Patient" onAction="#handleSavePatient"
                    style="-fx-background-color: #1976d2; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-pref-width: 180;"/>

        </VBox>
    </center>

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
</BorderPane>