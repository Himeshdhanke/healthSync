<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="hospital.controller.ManageReportsController"
            prefWidth="900" prefHeight="600"
            style="-fx-background-color: #f7f9fb;">

    <!-- Top Bar -->
    <top>
        <HBox spacing="20" alignment="CENTER_LEFT" style="-fx-background-color: #3c6e71;">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>
            <Button text="← Back" onAction="#goBack"
                    style="-fx-background-color: white; -fx-text-fill: #3c6e71; -fx-font-weight: bold;"/>
            <Label text="Manage Reports"
                   style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <!-- Center -->
    <center>
        <VBox spacing="20">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>

            <!-- Form Fields -->
            <GridPane hgap="15" vgap="15">
                <columnConstraints>
                    <ColumnConstraints percentWidth="25"/>
                    <ColumnConstraints percentWidth="75"/>
                </columnConstraints>

                <Label text="Patient Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtPatientName" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Test Type:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtTestType" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Result:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextArea fx:id="txtResult" GridPane.rowIndex="2" GridPane.columnIndex="1" prefRowCount="3"/>

                <Label text="Report Date:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <DatePicker fx:id="txtReportDate" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Status:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="txtStatus" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            </GridPane>

            <!-- Buttons -->
            <HBox spacing="15" alignment="CENTER_LEFT">
                <Button text="Add" onAction="#handleAdd" style="-fx-background-color: #3c6e71; -fx-text-fill: white;"/>
                <Button text="Edit" onAction="#handleEdit" style="-fx-background-color: #3c6e71; -fx-text-fill: white;"/>
                <Button text="Update" onAction="#handleUpdate" style="-fx-background-color: #3c6e71; -fx-text-fill: white;"/>
                <Button text="Delete" onAction="#handleDelete" style="-fx-background-color: #d62828; -fx-text-fill: white;"/>
                <Button text="Refresh" onAction="#loadReports" style="-fx-background-color: #3c6e71; -fx-text-fill: white;"/>
            </HBox>

            <!-- Table -->
            <TableView fx:id="reportTable" prefHeight="300">
                <columns>
                    <TableColumn fx:id="colReportId" text="ID" prefWidth="60"/>
                    <TableColumn fx:id="colPatientName" text="Patient Name" prefWidth="150"/>
                    <TableColumn fx:id="colTestType" text="Test Type" prefWidth="150"/>
                    <TableColumn fx:id="colResult" text="Result" prefWidth="200"/>
                    <TableColumn fx:id="colReportDate" text="Date" prefWidth="120"/>
                    <TableColumn fx:id="colStatus" text="Status" prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
